@model IEnumerable<MyWebAPIDeal.Models.ClientDealsModel>

<p>
    @Html.ActionLink("Create New Deal", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClientId)
        </th>
